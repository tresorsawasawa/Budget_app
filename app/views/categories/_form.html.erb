<div class="forms_section">
  <%= form_with(model: category) do |form| %>
    <% if category.errors.any? %>
      <div style="color: red">
        <h4><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h4>
      
        <ul style="color: red;">
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field mt-50">
      <%= form.label :name, class: "label" %> <br>
      <%= form.text_field :name, id: 'name', placeholder: "Enter Category's Name" %>
    </div>
  
    <div class="field">
      <%= form.label :icon, class: "label" %> <br>
      <%= form.text_field :icon, placeholder: "Enter the Icon link. e.g: https://icon.com" %>
    </div>
  
    <div class="field text_white">
      <%= form.submit class: "bg_col_blue new_category_btn text_white" %>
    </div>
  <% end %>
</div>